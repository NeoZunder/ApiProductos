generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Administradores {
  id        Int       @id(map: "PK__Administ__3213E83F9D273C7E") @default(autoincrement())
  username  String    @unique(map: "UQ__Administ__F3DBC572269E0199") @db.VarChar(50)
  email      String    @unique @db.VarChar(255) 
  password  String    @db.VarChar(255)
  creado_en DateTime? @default(now(), map: "DF__Administr__cread__17036CC0") @db.DateTime
}

model productos {
  id          Int     @id(map: "PK__producto__3213E83FB9750087") @default(autoincrement())
  nombre      String  @db.VarChar(100)
  descripcion String? @db.Text
  precio      Decimal @db.Decimal(10, 2)
  stock       Int
}

model trabajadores {
  Id       Int     @id(map: "PK_trabajadores") @default(autoincrement())
  Nombre   String? @db.NChar(10)
  Telefono String? @db.NChar(10)
}
